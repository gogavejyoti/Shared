  <script>
        $(function () {
            var $timeoutTimer = null;
            var $logoutTimer = null;
            startTimer();
            function startTimer() {
                if ($timeoutTimer != null) {
                    clearTimeout($timeoutTimer);
                }
                if ($logoutTimer != null) {
                    clearTimeout($logoutTimer);
                }
                   $timeoutTimer = setTimeout(function () {
                    $logoutTimer = setTimeout(function () {
                        window.location.href = '/Dashboard/LogOut';
                        clearTimeout($logoutTimer);
                    }, 300000);
                    //  }, 3000);
                    timeOutPopup();
                   }, 3000000);
                   //}, 5000);
            }
            function timeOutPopup(){
                var $container, $dialog, $content, $header, $body, $footer, $logoutBtn;
                $container = $('<div class="modal fade" id="notifyLogout" tabindex="-1" role="dialog" aria-labelledby="notifyLogoutLabel" aria-hidden="true"></div>');
                $dialog = $('<div class="modal-dialog"></div>');
                $content = $('<div class="modal-content"></div>');
                $header = $('<div class="modal-header"><button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button><h4 class="modal-title" id="notifyLogoutLabel">' + 'Session Timeout' + '</h4></div>');
                $body = $('<div class="modal-body">' + 'You\'re being timed out due to inactivity. Please choose to stay signed in or to logoff. Otherwise, you will logged off automatically.' + '</div>');
                $footer = $('<div class="modal-footer"><button type="button" class="btn btn-primary" data-dismiss="modal">' + 'Stay Logged In'  + '</button></div>');
                $logoutBtn = $('<button type="button" class="btn btn-default" id="logoff">' + 'Log Off'+ '</button>');
                $content.append($header, $body, $footer);
                $footer.prepend($logoutBtn);
                $dialog.append($content);
                $container.append($dialog);
                $($container).modal({
                    backdrop: 'static',
                    keyboard: false,
                    show: true
                });
                $($container).on('hide.bs.modal', function () {
                    startTimer();
                    $($container).remove();
                });
                $($logoutBtn).on('click', function () {
                    window.location.href = '/Dashboard/LogOut';
                });
            }
            $(document).on('focus click mousemove mousedown keyup scroll keypress', function () {
                startTimer();
            });
        });
    </script>
